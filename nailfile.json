{
  "dir"   : "www",
  "nails" : [
    {
      "plugin" : "nail-copy",
      "tag"    : ["static"],
      "source" : [
        "./index.html",
        "views"
      ]
    },
    {
      "plugin" : "nail-css-edge",
      "tag"    : ["css"],
      "mode":"scss",
      "minify":false,
      "source" : "./style/index.scss"
    },
    {
      "plugin" : "nail-js-edge",
      "tag"    : ["js"],
      "babelify" : true,
      "debug":true,
      "minify":true,
      "map":false,
      "source" : "./script/index.js"
    }
  ]
}
